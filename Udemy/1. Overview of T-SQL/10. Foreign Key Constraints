INSERT INTO Orders(OrderID, CourseID, StudentID, Discountpercent) values ('03', 'C3', 'S3', 60);

SELECT * 
FROM Orders

-- Must drop Orders Table First as Foreign Key is Referenced
DROP Orders;
DROP student;
DROP Course;